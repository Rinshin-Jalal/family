{
  "name": "family-plus-backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^25.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.3",
    "wrangler": "^4.56.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.47.10",
    "@types/jsonwebtoken": "^9.0.10",
    "hono": "^4.6.14",
    "jsonwebtoken": "^9.0.3",
    "openai": "^6.15.0",
    "tslib": "^2.8.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "moduleFileExtensions": ["ts", "js", "json"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"]
  }
}
